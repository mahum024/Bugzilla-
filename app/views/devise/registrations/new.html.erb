<div class="SignUp ">
<h1 class="text-center my-5">Sign up</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-group text-center my-5">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  
  <div class="field form-group text-center my-5">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true  %>
  </div>

  <div class="field form-group text-center my-5">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field form-group text-center my-5">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field form-group text-center my-5">
    <%= f.select :user_type, options_for_select(User.user_types.map {|key, value| [key.titleize, User.user_types.key(value)]}, :user_type), required: true  %>
  </div>

  <div class="actions text-center my-5">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>