<div class="text-center">

  <div class="border mx-auto w-25 ">

  <p class="my-5 w-100 h-100 mx-auto ">
    <%= image_tag(@bug.screenshot, class: 'rounded-circle', size:'250x250') if @bug.screenshot.attached? %>
  </p>

  <p class="my-5">
    <strong>ID:</strong>
    <%= @bug.id %>
  </p>

  <p class="my-5" >
    <strong>Title:</strong>
    <%= @bug.title %>
  </p>

  <p class="my-5" >
    <strong>Description:</strong>
    <%= @bug.description %>
  </p>

  <p class="my-5" > 
    <strong>Deadline:</strong>
    <%= @bug.deadline %>
  </p>

  <p class="my-5">
    <strong>Type of bug:</strong>
    <%= @bug.type_of_bug %>
  </p>

  <p class="my-5" >
    <strong>Status:</strong>
    <%= @bug.status %>
  </p>

  <p class="my-5" >
    <strong>Creator:</strong>
    <%= @bug.creator_id %>
  </p>

  <p class="my-5" >
    <strong>Developer:</strong>
    <%= @bug.developer_id %>
  </p>

  <p class="my-5" >
    <strong>Project:</strong>
    <%= @bug.project_id %>
  </p>


<div class="mx-5 my-5">
  <% if current_user.user_type == 'qa' %>
    <%= link_to 'Edit', edit_bug_path(@bug, :project_id => @bug.project_id) %> | 
  <% end %>

  <%= link_to 'Back', project_bugs_path(@bug.project_id) %>
</div>